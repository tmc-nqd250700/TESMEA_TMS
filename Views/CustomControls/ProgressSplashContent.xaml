<UserControl x:Class="TESMEA_TMS.Views.CustomControls.ProgressSplashContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid>
        <md:Card Background="{DynamicResource MaterialDesignPaper}" Padding="10" md:ShadowAssist.ShadowDepth="Depth4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding Message}" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,10"/>
                <ProgressBar IsIndeterminate="{Binding IsIndeterminate}" 
                             Value="{Binding Value}"
                             Maximum="{Binding Maximum}"
                             Height="10" 
                             Width="300" 
                             Foreground="{DynamicResource MaterialDesignBody}" />
            </StackPanel>
        </md:Card>
    </Grid>
</UserControl>
