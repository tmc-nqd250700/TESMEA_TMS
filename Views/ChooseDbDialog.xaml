<Window x:Class="TESMEA_TMS.Views.ChooseDbDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TESMEA_TMS.Views"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        lex:ResxLocalizationProvider.DefaultAssembly="TESMEA_TMS"
        lex:ResxLocalizationProvider.DefaultDictionary="Strings"
        mc:Ignorable="d"
        Height="200" Width="300"
        Icon="/Assets/Images/tcm_logo.PNG"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <StackPanel Margin="15">
        <TextBlock Text="{lex:Loc lbl_Db_path}"  FontWeight="SemiBold" FontSize="15" />
        <TextBox Margin="5 20" x:Name="txtDbPath"
             IsReadOnly="True"
             md:HintAssist.Hint="{lex:Loc lbl_Db_path}"
             ToolTip="{Binding SimaticPath}"
             PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown"
             Text="{Binding SimaticPath, Mode=TwoWay}"/>
        <Button Content="OK" Width="80" IsDefault="True" Command="{Binding SaveCommand}" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </StackPanel>
</Window>
