<Window x:Class="TESMEA_TMS.Views.ConfirmSaveDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TESMEA_TMS.Views"
         xmlns:lex="http://wpflocalizeextension.codeplex.com"
        lex:LocalizeDictionary.DesignCulture="vi"
        lex:ResxLocalizationProvider.DefaultAssembly="TESMEA_TMS"
        lex:ResxLocalizationProvider.DefaultDictionary="Strings"
        mc:Ignorable="d"
        Title="{Binding DialogTitle}"
        Height="200" 
        Width="400"
        Icon="/Assets/Images/tcm_logo.PNG"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="{Binding Message}" 
                   FontSize="14"
                   Margin="0 0 0 15"/>

        <TextBox Grid.Row="1" 
                 x:Name="InputTextBox"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 FontSize="13"
                 VerticalAlignment="Top"
                 Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                 MaxLength="200"/>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0 20 0 0">
            <Button Content="{lex:Loc btn_Cancel}" 
                    Width="80" 
                    Margin="0 0 10 0"
                    Click="CancelButton_Click"
                    Style="{StaticResource SolidButtonStyle}" 
                    IsCancel="True"/>
            <Button Content="{lex:Loc btn_Ok}" 
                    Width="80"
                    Click="OkButton_Click"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
