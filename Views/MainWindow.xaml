<Window x:Class="TESMEA_TMS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TESMEA_TMS.Views"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:hp="clr-namespace:TESMEA_TMS.Helpers"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        lex:ResxLocalizationProvider.DefaultAssembly="TESMEA_TMS"
        lex:ResxLocalizationProvider.DefaultDictionary="Strings"
        mc:Ignorable="d"
        Height="1080"
        Width="1920"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        WindowState="Maximized"
        Icon="/Assets/Images/tcm_logo.PNG"
        Background="White"
        DataContext="{Binding MainViewModel, Source={StaticResource Locator}}">

    <Window.Resources>
        <Style x:Key="MenuItemHighlightStyle" TargetType="MenuItem" BasedOn="{StaticResource {x:Type MenuItem}}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Width" Value="230" />
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#FFCCE5FF" />
                    <Setter Property="Foreground" Value="DodgerBlue" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE6F2FF" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <md:DialogHost x:Name="MainDialogHost" Identifier="MainDialogHost" CloseOnClickAway="True">
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="100" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0"
                    BorderBrush="#FFCCE5FF"
                    BorderThickness="0 0 0 2">
                <DockPanel Height="Auto" LastChildFill="True">
                  
                    <Image DockPanel.Dock="Left"
        Source="/Assets/Images/tcm_logo.PNG"
        Stretch="None" />
                    
                    <!--<Image DockPanel.Dock="Left"
                           Source="/Assets/Images/tcm_logo.PNG"
                           VerticalAlignment="Center"
                           Stretch="Uniform" />-->

                    <StackPanel DockPanel.Dock="Right"
                                Orientation="Vertical" VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                Margin="0 0 10 0">

                        <Button Command="{Binding LogoutCommand}"
                                Padding="10"
                                FontSize="15"
                                Background="#FFCCE5FF"
                                Foreground="DodgerBlue"
                                BorderBrush="#FFCCE5FF"
                                BorderThickness="1"
                                Margin="0 0 0 5">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <md:PackIcon Kind="LogoutVariant" Width="20" Height="20" Margin="0,0,4,0" />
                                    <TextBlock Text="{lex:Loc btn_Logout}"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <Border BorderBrush="#FFCCE5FF"
                                BorderThickness="1"
                                Padding="8 2"
                                Background="#FFE6F2FF">
                            <TextBlock FontSize="16"
                                       VerticalAlignment="Center"
                                       Text="{Binding CurrentDateTime}" />
                        </Border>

                    </StackPanel>

                    <!--<TextBlock TextAlignment="Center"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="5 0">
                        INDUSTRIAL FAN AUTOMATIC TEST SYSTEM - TESMEA
                        <LineBreak />
                        TCVN 9439:2013/ISO 5801:2007 (E)
                    </TextBlock>-->
                    <TextBlock TextAlignment="Center"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="5 0">
                        <Run Text="{lex:Loc Common_AppName}" Foreground="Blue"/>
                        <LineBreak />
                        <Run Text="(ISO 5801:2017 - TCVN 9439:2013)" FontSize="14" />
                        <!--<LineBreak />
                        <Run Text="{lex:Loc Common_AppSubName}" FontSize="16" />-->
                    </TextBlock>
                </DockPanel>
            </Border>

            <DockPanel Grid.Row="1" LastChildFill="True">

                <Grid DockPanel.Dock="Left"
                      Width="230"
                      Background="Transparent">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border BorderBrush="#FFCCE5FF" BorderThickness="0 0 1 0" Grid.RowSpan="2" />

                    <Menu Grid.Row="0"
                          Background="Transparent"
                          VerticalAlignment="Top">

                        <MenuItem Header="Project"
                                  Icon="{md:PackIcon Kind=ProjectorScreenVariant}"
                                  FontSize="15"
                                  Style="{StaticResource MenuItemHighlightStyle}"
                                  IsChecked="True"
                                  Click="MenuGroup_Click"
                                  x:Name="mItemProject"
                                  d:Visibility="Visible"
                                  Command="{Binding ShowProjectViewCommand}" />

                        <MenuItem Header="Library"
                                  Icon="{md:PackIcon Kind=LocalLibrary}"
                                  FontSize="15"
                                  Style="{StaticResource MenuItemHighlightStyle}"
                                  Click="MenuGroup_Click"
                                  x:Name="mItemLibrary"
                                  d:Visibility="Visible"
                                  Command="{Binding ShowLibrabyViewCommand}" />

                        <MenuItem Header="Scenario"
                                  Icon="{md:PackIcon Kind=Database}"
                                  FontSize="15"
                                  Style="{StaticResource MenuItemHighlightStyle}"
                                  Click="MenuGroup_Click"
                                  x:Name="mItemScenario"
                                  d:Visibility="Visible"
                                  Command="{Binding ShowScenarioViewCommand}" />

                        <MenuItem Header="Data History"
                                  Icon="{md:PackIcon Kind=ClipboardTextHistory}"
                                  FontSize="15"
                                  Style="{StaticResource MenuItemHighlightStyle}"
                                  Click="MenuGroup_Click"
                                  x:Name="mItemDataHistory"
                                  d:Visibility="Visible"
                                  Padding="16,0,0,0"/>
                    </Menu>

                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom">
                        <Separator Margin="5" />
                        <Menu Background="Transparent" VerticalAlignment="Bottom">
                            <MenuItem Header="Setting"
                                      Icon="{md:PackIcon Kind=Settings}"
                                      FontSize="15"
                                      Style="{StaticResource MenuItemHighlightStyle}"
                                      x:Name="mItemSettings"
                                      Command="{Binding ShowSettingDialogCommand}" />

                            <MenuItem Header="About"
                                      Icon="{md:PackIcon Kind=InformationOutline}"
                                      FontSize="15"
                                      Style="{StaticResource MenuItemHighlightStyle}"
                                      x:Name="mItemAbout" />
                        </Menu>
                    </StackPanel>
                </Grid>

                <ContentControl x:Name="MainContent" Content="{Binding CurrentView}" />

            </DockPanel>
        </Grid>
    </md:DialogHost>
</Window>